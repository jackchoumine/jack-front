{
  "stylelint.validate": ["css", "scss", "less", "scss", "vue", "sass"],
  "liveSassCompile.settings.formats": [
    {
      // nested 嵌套模式
      // compressed 压缩模式
      // compact 紧凑模式
      "format": "expanded",
      "extensionName": ".css",
      "savePath": "~/css"
    }
  ],
  "[markdown]": {
    "editor.formatOnSave": true
  },
  "compile-hero.disable-compile-files-on-did-save-code": false,
  "livePreview.defaultPreviewPath": "/packages/learn-scss/index.html",
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false,
    "yaml": false
  },
  "cSpell.words": [
    "echarts",
    "hoverintent",
    "latlng",
    "Littleton",
    "popperjs",
    "preinstall",
    "rushstack",
    "stylelint",
    "todos",
    "trivago",
    "unplugin",
    "USGS",
    "vitepress"
  ],
  // 这些文件将不会显示在工作空间中
  "files.exclude": {
    // "**/*.js": {
    //   "when": "$(basename).ts" //ts编译后生成的js文件将不会显示在工作空中
    // },
    "**/node_modules": true
  }
}
